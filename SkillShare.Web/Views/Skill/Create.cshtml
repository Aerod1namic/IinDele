@model SkillShare.Web.Models.Skill

@{
    ViewData["Title"] = "Добавить навык";
}

<div class="container my-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Добавить новый навык</h2>

                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Название</label>
                            <input asp-for="Name" class="form-control" placeholder="Введите название навыка" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Описание</label>
                            <textarea asp-for="Description" class="form-control" rows="3" 
                                    placeholder="Опишите навык..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Category" class="form-label">Категория</label>
                            <input asp-for="Category" class="form-control" placeholder="Введите категорию" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg"></i> Сохранить
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x"></i> Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 