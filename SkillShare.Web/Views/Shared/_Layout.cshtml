<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkillShare</title>
    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon">
    <link rel="icon" href="/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SkillShare.Web.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>
<body style="font-family: 'Open Sans', sans-serif; background-color:#acc0cb; color:#4F5A70;">
    <header>
        <div style="background-color:#acc0cb;" class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
            <div class="offcanvas-header">
                <h2 class="offcanvas-title text" id="offcanvasExampleLabel">БАРТЕР</h2>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <div class="navbar-collapse">
                    <ul class="navbar nav flex-column align-items-start">
                        <li class="nav-item">
                            <a class="nav-link text" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Главная
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text" asp-controller="Profiles" asp-action="Index">
                                <i class="bi bi-person-badge"></i> Анкеты
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text" asp-controller="Skill" asp-action="Index">
                                <i class="bi bi-mortarboard"></i> Навыки
                            </a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text" asp-controller="Collaboration" asp-action="Index">
                                    <i class="bi bi-people"></i> Сотрудничество
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text" asp-controller="Home" asp-action="About">
                                <i class="bi bi-info-circle"></i> О нас
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light navbaro border-bottom box-shadow mb-3">
            <div class="container">
                <a class="custom-toggler text-white me-3" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
                    <img src="~/stock-photo-abstract-silhouette-elephant-in-profile-monochrome-307208552.svg" alt="Рисунок"
                         style="position: absolute; top: 0px; left: -20px; height: 300px; width: auto; z-index: 10;">
                </a>
                <a class="navbar-brand text-white" style="font-weight:500; font-size: 22px" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-people-fill"></i> БАРТЕР
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1"></ul> 
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" 
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle text-white"></i> Мой профиль
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li>
                                        <a class="dropdown-item text" asp-controller="Profile" asp-action="Index">
                                            <i class="bi bi-person text"></i> Профиль
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item text" asp-controller="Subscription" asp-action="Status">
                                            <i class="bi bi-star text"></i> Подписка
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="bi bi-box-arrow-right"></i> Выйти
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right"></i> Войти
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Register">
                                    <i class="bi bi-person-plus"></i> Регистрация
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top footer text-muted navbaro">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-white">
                    &copy; @DateTime.Now.Year - БАРТЕР - Платформа для обмена навыками
                </div>
                <div class="col-md-6 text-end">
                    <a asp-controller="Home" class="textwhite" asp-action="Privacy">Конфиденциальность</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    .text{
        color: #4F5A70;
        font-weight: 700;
    }

    .nav-link.dropdown-toggle {
        color: white !important;
        font-weight:700;
    }
    .navbaro{
        background-color:#396799;
    }
    .textwhite{
        color:white !important;
        text-decoration: none;
    }
    .custom-toggler{
        font-size: 2rem;
    }
</style>
