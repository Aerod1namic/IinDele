@page "/profiles"
@using Microsoft.AspNetCore.Authorization
@using LearningPlatform.Data
@using LearningPlatform.Models
@using Microsoft.EntityFrameworkCore
@inject AppDbContext DbContext
@inject NavigationManager NavigationManager
@attribute [AllowAnonymous]
<PageTitle>Профили</PageTitle>

<h3>Профили пользователей</h3>
<div class="container">
    @if (profiles == null)
    {
        <p>Загрузка...</p>
    }
    else if (!profiles.Any())
    {
        <p>Профили не найдены.</p>
    }
    else
    {
        <div class="row">
            @foreach (var profile in profiles)
            {
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">@profile.About</h5>
                            <p class="card-text"><strong>Город:</strong> @profile.City</p>
                            <p class="card-text"><strong>Возраст:</strong> @profile.Age</p>
                            <p class="card-text"><strong>Пол:</strong> @profile.Gender</p>
                            <p class="card-text"><strong>Могу научить:</strong> @string.Join(", ", profile.CanTeach)</p>
                            <p class="card-text"><strong>Хочу научиться:</strong> @string.Join(", ", profile.WantToLearn)</p>
                            <p class="card-text"><strong>Лайки:</strong> @profile.Likes</p>
                            <p class="card-text"><strong>Дизлайки:</strong> @profile.Dislikes</p>
                            <p class="card-text"><strong>Всего коллабораций:</strong> @profile.TotalCollaborations</p>
                            <button class="btn btn-primary" @onclick="() => MessageUser(profile.Id)">Написать</button>
                            <button class="btn btn-success" @onclick="() => Collaborate(profile.Id)">Сотрудничать</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<UserProfile>? profiles;

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("Загрузка профилей в Profiles.razor");
        profiles = await DbContext.UserProfiles.ToListAsync();
        Console.WriteLine($"Загружено {profiles?.Count ?? 0} профилей");
        await InvokeAsync(StateHasChanged);
    }

    private void MessageUser(string? userId)
    {
        if (userId != null)
        {
            NavigationManager.NavigateTo($"/messages/{userId}");
        }
    }

    private void Collaborate(string? userId)
    {
        if (userId != null)
        {
            NavigationManager.NavigateTo($"/collaborate/{userId}");
        }
    }
}